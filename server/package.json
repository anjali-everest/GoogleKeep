{
  "name": "server",
  "version": "1.0.0",
  "description": "RESTful API for Google Keep Application using Nodejs, Express and PostgreSQL",
  "main": "server.js",
  "scripts": {
    "test": "ENVIRONMENT=test DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres node-pg-migrate up && jest",
    "start": "node server.js",
    "dev": "nodemon --es-module-specifier-resolution=node --watch server.js",
    "migrate": "node-pg-migrate",
    "coverage": "ENVIRONMENT=test DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres node-pg-migrate up && jest --coverage"
  },
  "author": "Gaddam Anjali",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "node-pg-migrate": "^5.7.1",
    "pg": "^8.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "jest": "^26.1.0",
    "nodeman": "^1.1.2",
    "supertest": "^4.0.2"
  }
}
